            <% if session[:user_id] %>
              <%= form_tag logout_path, :method=> :delete, :class=> :destroy do %>
              <div class="d-flex justify-content-center">
              <%= submit_tag "Logout", class: "btn" %>
              </div>
              <% end %>
            <% else %>
              <li><a class="dropdown-item" href="<%= new_session_path %>">Login</a></li>
              <li><a class="dropdown-item" href="<%= new_user_path %>">Signup</a></li>
            <% end %>
